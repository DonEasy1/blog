<% include ./partials/header %>
<br><br>
<h1>INDEX PAGE!</h1>
<% blogs.forEach((blog) => { %>
    <div>
        <h2><%= blog.title %></h2>
        <img src="<%= blog.image %>">
        <p><%= blog.created.toDateString() %></p>
        <p><%- blog.body.substring(0, 75) %>...</p>
        <a href="/blogs/<%= blog._id %>">More</a>
    </div>
<% }); %>
<% include ./partials/footer %>
